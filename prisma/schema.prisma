generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id               String @id @default(uuid())
  name             String
  about            String @db.VarChar(300)
  age              String
  energyLevel      String
  animalSize       String
  independeceLevel String
  photo            String
  environment      String

  org   Org    @relation(fields: [orgId], references: [id])
  orgId String

  @@map("pets")
}

model Org {
  id     String @id @default(uuid())
  name   String
  adress String
  city   String
  phone  String
  Pet    Pet[]

  @@map("orgs")
}
