generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id               String @id @default(uuid())
  name             String
  about            String @db.VarChar(300)
  age              String
  energyLevel      String
  animalSize       String
  independeceLevel String
  photo            String
  spacious         String
  orgs             Org[]

  @@map("pets")
}

model Org {
  id     String @id @default(uuid())
  name   String
  adress String
  phone  String

  pet    Pet    @relation(fields: [pet_id], references: [id])
  pet_id String

  @@map("orgs")
}
